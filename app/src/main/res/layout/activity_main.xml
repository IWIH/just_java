<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.example.justjava.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:id="@+id/quantityLabel"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/quantityLabel"
        android:id="@+id/increaseButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="__"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:id="@+id/quantityTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_alignBottom="@+id/increaseButton"
        android:layout_toRightOf="@+id/increaseButton"
        android:layout_toEndOf="@+id/increaseButton" />


</RelativeLayout>
